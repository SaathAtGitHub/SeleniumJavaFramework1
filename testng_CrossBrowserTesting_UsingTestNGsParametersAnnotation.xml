<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Suite">
  <test name="Test">
  
  <parameter name="browserName" value="firefox"></parameter> 
  <!--  Above you need to specify the parameter that you wish to use in your .java / test file. -->
  
    <classes>
      <class name="interview.CrossBrowserTesting_UsingTestNGsParametersAnnotation"/> 
      <!--  Here u need to specify the test / .java file in which you will use @Parameters annotation by writing 
      "@Parameters("browserName")" annotation before the method that will be using "browserName" parameter.   -->
    </classes>
  </test> <!-- Test -->
</suite> <!-- Suite -->
